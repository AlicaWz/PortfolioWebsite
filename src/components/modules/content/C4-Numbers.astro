---
import NumbersItem, { type NumbersItemProps } from "@components/library/NumbersItem.astro";
import type { IComponentDefaults } from "@system/utils/types";


export interface C4NumbersProps extends IComponentDefaults {
    items: NumbersItemProps[]
}

export interface Props {
    blok: C4NumbersProps;
}

const { blok } = Astro.props;
const { items } = blok;

---

<section
    aria-label="Numbers"
    class="c4-numbers col-span-4 lg-col-start-11 lg-col-span-2"
    id={blok._uid}
>
    <div class="numbers">
        {items.map((item) => (
            <NumbersItem {...item} />
        ))}
    </div>
</section>


<style>
    .numbers {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 2fr;
        gap: 16px;
        height: 100%;
        width: 100%;

        @media (--medium-viewport) {
            grid-template-columns: 1fr 1fr 2fr;
            grid-template-rows: 1fr;
            gap: 24px;
        }

        @media (--large-viewport) {
            grid-template-columns: repeat(1, 1fr);
            grid-template-rows: repeat(3, 1fr);
            grid-auto-flow: column;
        }
    }
</style>


