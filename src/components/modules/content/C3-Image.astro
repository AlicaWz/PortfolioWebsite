---
import type { AssetStoryblok } from "@system/utils/types";
import { Image } from "astro:assets";

export interface ImageProps {
    gridSmall?: { start: number, span: number};
    gridMedium?: { start: number, span: number};
    gridLarge?: { start: number, span: number};
    image: AssetStoryblok
    inferSize?: boolean;
    backgroundColor: "Red" | "Blue" | "Green" | "Yellow" | "Purple";
    aspectRatio?: "1/1" | "16/9" |"9/16" | "4/3" | "3/4"; 
}

const { gridSmall, gridMedium, gridLarge, image, backgroundColor, inferSize = "true", aspectRatio = "1/1" } = Astro.props;

const smallStart = gridSmall && gridSmall.start
const smallSpan = gridSmall && gridSmall.span
const mediumStart = gridMedium && gridMedium.start
const mediumSpan = gridMedium && gridMedium.span
const largeStart = gridLarge && gridLarge.start
const largeSpan = gridLarge && gridLarge.span

const aspectRatioClass = aspectRatio.replace('/', '-');
---

<div class:list={[
    `col-span-${smallSpan}`,
    `md-col-span-${mediumSpan}`,
    `lg-col-span-${largeSpan}`,
    `col-start-${smallStart}`,
    `md-col-start-${mediumStart}`,
    `lg-col-start-${largeStart}`,
    `bg-${backgroundColor}`
]}>
    <Image src={image.filename} alt={image.alt || ''} inferSize={inferSize} class={`aspect-ratio-${aspectRatioClass}`}/> 
</div>

<style>
    div {
        border-radius: 24px;
        display: flex;
        align-items: flex-end;
        height: 100%;
    }

    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: bottom;
        overflow: visible;
        z-index: 1;

        @media (--large-viewport) {
            width: 120%;
            transform: translateX(-80px);
        }
    }

    .aspect-ratio-1-1 {
        aspect-ratio: 1 / 1;
    }

    .aspect-ratio-16-9 {
        aspect-ratio: 16 / 9;
    }

    .aspect-ratio-9-16 {
        aspect-ratio: 9 / 16;
    }

    .aspect-ratio-4-3 {
        aspect-ratio: 4 / 3;
    }

    .aspect-ratio-3-4 {
        aspect-ratio: 3 / 4;
    }
</style>