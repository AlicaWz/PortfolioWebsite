---
import { Image } from "astro:assets";

export interface IconButtonProps {
    icon: BASIC.AssetStoryblok;
    variant: "primary" | "secondary";
    theme: "default" | "light"
    href: BASIC.LinkProps;
    target: string;
}

const { icon, variant = "primary", href, target } = Astro.props
---

<a class:list={[variant]} type="button" href={href.url} target={target}>
    <Image src={icon.filename} alt={icon.alt || ''} inferSize={true} />
</a>

<style>
    a {
        width: 48px;
        height: 48px;
        border-radius: 100%;
        color: var(--color-white);
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    p {
        font-weight: bold;
    }

    img {
        width: 32px;
        height: 32px;
    }

    .primary {
        background-color: var(--color-white);

        &:hover {
            cursor: pointer;
            background-color: var(--color-neutral-stonewhite);
        }
    }

    .secondary {
        border: 2px solid var(--color-white);
        color: var(--color-white);

        &:hover {
            cursor: pointer;
            border-color: var(--color-neutral-stonewhite);
            color: var(--color-neutral-stonewhite);
        }
    }
</style>