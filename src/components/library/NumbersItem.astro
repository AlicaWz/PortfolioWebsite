---
export interface NumbersItemProps {
  color: "Red" | "Blue" | "Green" | "Yellow" | "Purple";
  number: number;
  copy: string;
}

const { color, number, copy } = Astro.props;
---

<div class={`bg-${color}`}>
  <h2>{number}</h2>
  <p>{copy}</p>
</div>

<style>
  div {
    border-radius: 24px;
    padding: 16px;
    display: flex;
    gap: 8px;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 140px;

    &:last-child {
      grid-column: 1 / span 2;
      flex-direction: row;
      justify-content: space-evenly;
    }

    @media (--medium-viewport) {
      &:last-child {
        grid-column: auto;
      }
    }

    @media (--large-viewport) {
      grid-column: auto;
      grid-row: span 1 / span 1;
      min-height: none;

      &:last-child {
        grid-column: auto;
        grid-row: span 1 / span 1;
        flex-direction: column;
        justify-content: center;
      }
    }
  }

  p {
    text-align: center;
  }
</style>
